<%= render 'layouts/navbar' %>


<% @trips.each do |trip|%>
  <p><%= link_to trip.destination, trip_path(trip) %></p>
  <p>Total Price:<%= trip.total_price %></p>
  <p>Arrival Date: <%= trip.date_coming %></p>
  <p>Leaving Date: <%= trip.date_leaving%></p>
  <p><%= trip.type_transportation %></p>
  <p>Number of people: <%= trip.people %></p>
  <br>
<% end %>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

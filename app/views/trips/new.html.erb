<%= render 'layouts/navbar' %>

<div class="container mt-3" id="form-1">
  <div class="d-flex bar mb-5">
    <div class="bar-item col-lg-3">Timeframe</div>
    <%# <div class="bar-item col-lg-3">Transport</div> MORGEN TICKET%>
    <div class="bar-item col-lg-3">Accommodation</div>
    <div class="bar-item col-lg-3">Who's joining?</div>
    <div class="bar-item col-lg-3">Major interests</div>
  </div>
<%= form_for(@trip) do |t| %>
  <div class="form-group">
    <div class="label text-center">
    <%= t.label :Which_destination_would_you_like_to_visit? %>
    </div>
    <%= t.text_field :destination, class: 'form-control', placeholder: '...' %>
  </div>
  <div class="form-group">
    <div class="label text-center">
    <%= t.label :What_is_the_timeframe_of_your_trip? %>
    </div>
    <div class="timeframe d-flex justify-content-between row">
    <%= t.date_field :date_coming, class: 'form-control col-lg-6', id: 'timeframe', placeholder: 'Check-in date' %>
    <%= t.date_field :date_leaving, class: 'form-control col-lg-6', id: 'timeframe', placeholder: 'Check-out date' %>
    </div>
  </div>

<div class="form-group">
  <div class="label text-center">
    <%= t.label :Do_you_need_a_transport_recommendation? %>
  </div>
    <%= t.select :type_transportation, collection: User::TRANSPORTATION, class: 'form-control' %>
  </div>

  <div class="form-group">
    <div class="label text-center">
    <%= t.label :How_many_people_are_you? %>
    </div>
    <%= t.number_field :people, class: 'form-control', min: 1 %>
  </div>

  <div class="form-button">
    <div class="label text-center">
      <%= t.label :Thank_you_for_the_infos! %>
      </div>
    <%= t.submit class: "form-control btn btn-primary", id:"button-home-1" %>
  </div>
<%end%>
</div>

<%= render 'layouts/footer' %>
